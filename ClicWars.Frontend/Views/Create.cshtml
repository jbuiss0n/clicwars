<form name="form" novalidate>
	<div><label>Username: <input type="text" ng-model="account.username" required /></label></div>
	<div><label>Body: <input type="number" ng-model="account.body" required integer min="0" max="50" /></label></div>

	<div><button ng-click="createAccount(account)" ng-disabled="form.$invalid">Create account</button></div>
</form>
